pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/zeeshaan02/jenkins012.git'
            }
        }

        stage('Deploy') {
            steps {
                sh 'ansible-playbook deploy.yml -i /etc/ansible/hosts'
            }
        }

        stage('Verify') {
            steps {
                sh 'ssh -o StrictHostKeyChecking=no ubuntu@172.31.13.173 "docker ps"'
            }
        }
    }
}

